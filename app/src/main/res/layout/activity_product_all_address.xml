<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@drawable/bg_all"
    tools:context="com.organization.jeptagsalpha.ui.activity.product.ProductSaveActivity">
    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address_list"
        android:textSize="20sp"
        android:id="@+id/title"
        android:layout_gravity="center"
        android:textColor="@color/material_drawer_primary_dark"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:visibility="gone"
        >
        <RadioButton
            android:id="@+id/checkNewAddress"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/md_red_200"
            android:text="@string/new_add"
            android:textStyle="bold"
            android:visibility="visible"
            />
    </RadioGroup>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="@color/md_yellow_600"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:visibility="gone"/>
        <com.organization.jeptagsalpha.ui.controls.MyFormEdit
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <FrameLayout
                    android:id="@+id/listAddressFrame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>
            </RelativeLayout>

        </com.organization.jeptagsalpha.ui.controls.MyFormEdit>
</LinearLayout>