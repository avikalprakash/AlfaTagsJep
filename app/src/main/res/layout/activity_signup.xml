<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="37dp"
            >

            <com.organization.jeptagsalpha.ui.controls.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textSize="22dp"
                android:textColor="#ADCCE2"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                />

<!--            <Button
                android:id="@+id/signinBack"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/back"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center" />-->
        </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.organization.jeptagsalpha.ui.controls.MyFormEdit
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true">
            <com.organization.jeptagsalpha.ui.controls.MyEditTextLight
                android:id="@+id/first_name_edittext"
                android:hint="@string/first_name"
                android:inputType="text"
                android:maxLength="15"
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.organization.jeptagsalpha.ui.controls.MyEditTextLight
                android:id="@+id/middle_name_edittext"
                android:hint="@string/middle_name"
                android:inputType="text"
                android:maxLength="15"
                android:layout_marginTop="-10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.organization.jeptagsalpha.ui.controls.MyEditTextLight
                android:id="@+id/last_name_edittext"
                android:hint="@string/last_name"
                android:inputType="text"
                android:layout_marginTop="-10sp"
                android:maxLength="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.organization.jeptagsalpha.ui.controls.MyEditTextLight
                android:id="@+id/email_edittext"
                android:hint="@string/auth_hint_email"
                android:layout_marginTop="-10sp"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:maxLength="35"
                android:layout_height="wrap_content" />

          <!--  <com.organization.jeptagsalpha.ui.controls.MyEditTextLight
                android:id="@+id/store_name_edittext"
                android:hint="@string/store_name"
                android:layout_marginTop="-10sp"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.organization.jeptagsalpha.ui.controls.MyEditTextLight
                android:id="@+id/store_id_edittext"
                android:hint="@string/store_id"
                android:maxLength="10"
                android:layout_marginTop="-10sp"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />-->

            <com.organization.jeptagsalpha.ui.controls.MyEditTextLight
                android:id="@+id/password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/auth_hint_password"
                android:maxLength="30"
                android:layout_marginTop="-10sp"
                android:inputType="textPassword" />

            <com.organization.jeptagsalpha.ui.controls.MyEditTextLight
                android:id="@+id/repassword_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/auth_hint_repassword"
                android:maxLength="30"
                android:layout_marginTop="-10sp"
                android:inputType="textPassword" />

            <com.organization.jeptagsalpha.ui.controls.BlueButton
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:text="@string/register"
                android:layout_marginEnd="20sp"
                />


        </com.organization.jeptagsalpha.ui.controls.MyFormEdit>

        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</RelativeLayout>