<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.organization.jeptagsalpha.Temperature.SettingActivity">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#cd2626">

        <TextView
            android:id="@+id/prod_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/back"
            android:text="Setting"
            android:textColor="#ffffff"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/leftarrowed" />
    </RelativeLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/relative"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >
        <EditText
            android:id="@+id/name_edittext"
            android:hint="Profile Name"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="Interval (HH:MM:SS)"
        android:layout_below="@+id/nameLayout"/>
    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:layout_marginLeft="20dp"
        android:id="@+id/hh"
        android:hint="hh"
        android:maxLength="2"
        android:inputType="number"
        android:textColor="#000000"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/hh"
        android:layout_marginTop="10dp"
        android:text=":"
        android:id="@+id/text4"
        android:textColor="#000000"
        android:layout_below="@+id/text3"
        />
    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:id="@+id/mm"
        android:hint="mm"
        android:maxLength="2"
        android:inputType="number"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/text4"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/mm"
        android:layout_marginTop="10dp"
        android:text=":"
        android:id="@+id/text5"
        android:textColor="#000000"
        android:layout_below="@+id/text3"
        />
    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:id="@+id/ss"
        android:hint="ss"
        android:maxLength="2"
        android:textColor="#000000"
        android:inputType="number"
        android:layout_toEndOf="@+id/text5"
        android:gravity="center_horizontal"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/upperLayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/ss"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/upper_edittext"
            android:hint="Upper Limit"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:maxLength="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lowerLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/upperLayout"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/lower_edittext"
            android:hint="Lower Limit"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:maxLength="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />

    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lowerLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/temp"
        android:textSize="15dp"
        android:id="@+id/text1"
        android:textColor="#cd3333"
        android:textStyle="bold"/>
   <RadioGroup
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/lowerLayout"
       android:layout_marginLeft="120dp"
       android:layout_marginTop="20dp"
       android:paddingLeft="20dp"
       android:id="@+id/radiogroup1"
       android:orientation="horizontal">
       <RadioButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="celcious"
           android:textSize="12sp"
           android:layout_marginRight="10dp"
           android:id="@+id/celcious"/>
       <RadioButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Fahrenheit"
           android:textSize="12sp"
           android:id="@+id/fahrenheit"/>
   </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogroup1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:text="@string/time_zone"
        android:textSize="15dp"
        android:id="@+id/text2"
        android:textColor="#cd3333"
        android:textStyle="bold"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogroup1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:id="@+id/radiogroup2"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:id="@+id/local"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UTC"
            android:textSize="12sp"
            android:id="@+id/utc"/>
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="#cd3333"
        android:text="Save"
        android:id="@+id/savechange"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/radiogroup2"
        android:layout_marginTop="40dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="#cd3333"
        android:text="Cancel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:id="@+id/cancel"
        android:textAllCaps="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/radiogroup2"
        android:layout_marginTop="40dp"/>
</RelativeLayout>
