<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ImageView
        android:layout_width="150dp"
        android:src="@drawable/new_logo"
        android:layout_marginTop="20dp"
        android:scaleType="center"
        android:id="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:orientation="horizontal"
        android:layout_below="@+id/icon"
        android:layout_alignParentRight="true">
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/frameLayout"
            android:layout_marginTop="5sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >

            <Button
                android:background="@drawable/btn_back_yellow_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/intro_btn_language"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="12dp"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:text="Language"
                android:onClick="language"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:id="@+id/imageView30"
                android:src="@drawable/down_arrow"
                android:scaleType="centerCrop"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="5dp" />

        </FrameLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/layout2"
    android:id="@+id/layout1"
    android:layout_marginTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textSize="22dp"
        android:layout_below="@+id/relativeOne"
        android:layout_marginTop="10sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:id="@+id/txtSignin"
        android:textAlignment="gravity"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textSize="22dp"
        android:layout_below="@+id/relativeOne"
        android:layout_marginTop="10sp"
        android:textColor="#c1cdcd"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:id="@+id/signup"
        android:textAlignment="gravity"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginLeft="20dp"
        android:id="@+id/layout3"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#dcdcdc"
            android:paddingTop="5dp">
            <EditText
                android:id="@+id/user_edittext"
                android:hint="@string/auth_hint_username"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:layout_height="40dp"
                android:background="@android:color/transparent"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#dcdcdc"
            android:paddingTop="5dp">
            <EditText
                android:id="@+id/password_edittext"
                android:hint="@string/auth_hint_password"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:paddingLeft="20dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"/>
        </android.support.design.widget.TextInputLayout>
        <CheckBox
            android:id="@+id/saveLoginCheckBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editTextPassword"
            android:text="@string/auth_remember_me"
            android:textColor="#000000" />
        <Button
            android:id="@+id/signin"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/login_in"
            android:background="#838b8b"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c1cdcd"
        android:id="@+id/view"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/layout3"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_forgot_password"
        android:id="@+id/forgot_password"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>