<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="150dp"
        android:src="@drawable/new_logo"
        android:layout_marginTop="20dp"
        android:scaleType="center"
        android:id="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/icon"
        android:id="@+id/layout1"
        android:layout_marginTop="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textSize="22dp"
            android:layout_below="@+id/relativeOne"
            android:layout_marginTop="10sp"
            android:textColor="#c1cdcd"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:id="@+id/txtSignin"
            android:textAlignment="gravity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textSize="22dp"
            android:layout_below="@+id/relativeOne"
            android:layout_marginTop="10sp"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:id="@+id/signupText"
            android:textAlignment="gravity"/>
    </LinearLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout1"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstnameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#dcdcdc"
        android:paddingTop="5dp">
        <EditText
            android:id="@+id/first_name_edittext"
            android:hint="@string/first_name"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@android:color/transparent"
            android:layout_height="40dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/middilenameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/firstnameLayout"
        android:background="#dcdcdc"
        android:paddingTop="5dp">
        <EditText
            android:id="@+id/middle_name_edittext"
            android:hint="@string/middle_name"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@android:color/transparent"
            android:layout_height="40dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lastnameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/middilenameLayout"
        android:background="#dcdcdc"
        android:paddingTop="5dp">
        <EditText
            android:id="@+id/last_name_edittext"
            android:hint="@string/last_name"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@android:color/transparent"
            android:layout_height="40dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lastnameLayout"
        android:background="#dcdcdc"
        android:paddingTop="5dp">
        <EditText
            android:id="@+id/email_edittext"
            android:hint="@string/auth_hint_email"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@android:color/transparent"
            android:layout_height="40dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/emailLayout"
        android:background="#dcdcdc"
        android:paddingTop="5dp">
        <EditText
            android:id="@+id/password_edittext"
            android:hint="@string/auth_hint_password"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@android:color/transparent"
            android:layout_height="40dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/repassLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/passwordLayout"
        android:background="#dcdcdc"
        android:paddingTop="5dp">
        <EditText
            android:id="@+id/repassword_edittext"
            android:hint="@string/auth_hint_repassword"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@android:color/transparent"
            android:layout_height="40dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/signup"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/sign_up"
        android:background="#cd2626"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/repassLayout"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>
    </RelativeLayout>
</ScrollView>