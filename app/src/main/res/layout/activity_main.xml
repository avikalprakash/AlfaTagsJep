<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    tools:context="com.organization.jeptagsalpha.ui.activity.main.MainActivity">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <include layout="@layout/toolbar" />

    </LinearLayout>
    <TextView
        android:id="@+id/textView_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:id="@+id/relative1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/relative3"
                android:layout_marginTop="58dp"
                android:background="#6e7b8b"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/full_name"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative3"
                android:gravity="center"
                android:id="@+id/company_name"
                android:layout_marginTop="20dp"
                android:textSize="12dp"
                android:text="THAISON TECHNOLOGY DEVELOPMENT CO. LTD."/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/relative4"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/company_name"
                android:background="#e3e3e3"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:src="@drawable/profile_big"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    app:civ_border_color="#FF000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bought"
                    android:layout_toEndOf="@+id/profile_image"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:text="2000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bought"
                    android:id="@+id/textB"
                    android:text="Product"
                    android:layout_toEndOf="@+id/profile_image"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/used"
                    android:layout_toEndOf="@+id/bought"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:text="2000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/used"
                    android:id="@+id/textU"
                    android:text="Chip"
                    android:layout_toEndOf="@+id/bought"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pendingItem"
                    android:layout_toEndOf="@+id/used"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="20dp"
                    android:text="$ 70.00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pendingItem"
                    android:id="@+id/textP"
                    android:text=" Bonus"
                    android:layout_toEndOf="@+id/used"
                    android:layout_marginLeft="40dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout1"
                android:layout_marginTop="280dp">
                <TextView
                    android:id="@+id/product"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="PRODUCT"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="#999999"
                    android:layout_marginLeft="25dp"
                    android:paddingBottom="10dp"
                    android:drawableBottom="@drawable/product"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#999999"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/pending"
                    android:drawableBottom="@drawable/add_to_cart"
                    android:text="PENDING"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#999999"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/addProduct"
                    android:layout_marginRight="25dp"
                    android:drawableBottom="@drawable/add_pro"
                    android:text="ADD PRODUCT"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#999999"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/product"
                    android:id="@+id/addJeptags"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:drawableBottom="@drawable/add_jeptag"
                    android:text="ADD JEPTAGS"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#999999"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/pending"
                    android:id="@+id/report"
                    android:drawableBottom="@drawable/calender"
                    android:text="REPORT"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#999999"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:id="@+id/support"
                    android:text="SUPPORT"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:drawableBottom="@drawable/question"
                    android:layout_below="@+id/addProduct"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/temp"
    android:layout_below="@+id/layout1"
    android:layout_marginTop="10dp"
    android:background="#999999"
    android:text="Cold Chain"
    android:textColor="#000000"

    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="20dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stopRelativeLayout"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/stop"
                    android:layout_marginLeft="100sp"
                    />
                <TextView
                    android:layout_marginTop="170sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Product is Not Certified by JepTags"
                    android:textSize="35sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/genuineJepTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/genuine1"
            android:layout_marginLeft="100sp"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>

