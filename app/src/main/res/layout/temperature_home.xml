<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.organization.jeptagsalpha.ui.activity.main.TemperatureHome">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#cd2626"
        android:id="@+id/one">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Temperature"
            android:textColor="#ffffff"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/setting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/setting"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/two"
        android:orientation="horizontal"
        android:layout_below="@+id/one"
        android:weightSum="1.0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control"
            android:id="@+id/control"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textColor="#cd2626"
            android:layout_weight="0.20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            android:id="@+id/info"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textColor="#cd2626"
            android:layout_weight="0.20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List"
            android:id="@+id/list"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textColor="#cd2626"
            android:layout_weight="0.20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chart"
            android:id="@+id/chart"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textColor="#cd2626"
            android:layout_weight="0.20"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:id="@+id/view"
        android:layout_below="@+id/two"/>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_below="@+id/view">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/tracking_shipping"
        android:textSize="18dp"
        android:id="@+id/text1"
        android:textColor="#cd3333"
        android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:id="@+id/selectProfile"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="#cd3333"
            android:textAllCaps="false"
            android:text="Select Profile"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/barcodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/selectProfile">
        <EditText
            android:id="@+id/barcode_edittext"
            android:hint="Tracking Number"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/selectProfile"
        android:text="Scan"
        android:id="@+id/scan"
        android:background="#cd3333"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/barcodeLayout">
    <EditText
        android:id="@+id/name_edittext"
        android:hint="Name"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/nameLayout">
        <EditText
            android:id="@+id/email_edittext"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/addressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/emailLayout">
        <EditText
            android:id="@+id/address_edittext"
            android:hint="Address"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/addressLayout">
        <EditText
            android:id="@+id/phone_edittext"
            android:hint="Phone"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:maxLength="15"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/profileNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/phoneLayout">
        <EditText
            android:id="@+id/profil_name_edittext"
            android:hint="Select Profile Name"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/intervalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/profileNameLayout">
        <EditText
            android:id="@+id/textInterval"
            android:hint="Interval"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:enabled="false"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileNameLayout"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Sec"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/recordRuleLayout"
        android:layout_marginLeft="50dp"
        android:id="@+id/activeTag"
        android:text="Active Tag"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#cd3333"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/recordRuleLayout"
            android:layout_marginRight="50dp"
            android:id="@+id/deactiveTag"
            android:text="Deactivate Tag"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="#cd3333"
            />
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeUpper"
        android:layout_below="@+id/intervalLayout">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/upperLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/upper_edittext"
            android:hint="Upper Limit"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:maxLength="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />

    </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="°C"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/intervalLayout">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/lowerLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/lower_edittext"
            android:hint="Lower Limit"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:maxLength="3"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="°C"/>
    </RelativeLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/recordRuleLayout"
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relativeUpper">
        <EditText
            android:id="@+id/record_rule_edittext"
            android:hint="Record Rule"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_height="40dp" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activeTag">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_record"
            android:background="#cd3333"
            android:text="START RECORD"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop_record"
            android:background="#cd3333"
            android:text="STOP RECORD"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>
</RelativeLayout>
