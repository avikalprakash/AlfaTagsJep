            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layouCountry"
                android:background="#dcdcdc"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/postalLayout">
            <com.organization.jeptagsalpha.ui.controls.Spinner.MySpinnerLight2
                android:id="@+id/country_spinner"
                android:layout_width="match_parent"
                android:hint="@string/country"
                android:inputType="number"
                android:maxLength="15"
                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:paddingLeft="20dp"
                android:layout_height="60dp"/>
            </RelativeLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/latitudeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layouCountry"
                android:background="#dcdcdc"
                android:paddingTop="5dp">
                <EditText
                    android:paddingLeft="20dp"
                    android:id="@+id/latitude"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:hint="@string/latitude"
                    android:maxLength="15"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:background="@android:color/transparent"
                    android:layout_height="40dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/longitudeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/latitudeLayout"
                android:background="#dcdcdc"
                android:paddingTop="5dp">
                <EditText
                    android:paddingLeft="20dp"
                    android:id="@+id/longitude"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:hint="@string/longitude"
                    android:maxLength="15"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:background="@android:color/transparent"
                    android:layout_height="40dp"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/saveAddress"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="@string/save_address"
                android:background="#cd2626"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/longitudeLayout"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>